{% set lang = 'en' %}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html" charset=utf-8" />
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <title>{% block title %}iProduct Mobile Store{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
            {% block javascripts %}
                <script src="/bundles/istoregomlaphone/js/jquery-1.10.0.min.js"></script>
                <script src="/bundles/istoregomlaphone/js/bootstrap-datepicker.js"></script>
                <script src="/bundles/istoregomlaphone/js/bootstrap.min.js"></script>
                <script src="/bundles/istoregomlaphone/js/bootstrap-paginator.min.js"></script>
                <script src="/bundles/istoregomlaphone/js/main.js"></script>
            {% endblock %}
            {% block stylesheets %}
                <link href="/bundles/istoregomlaphone/css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css">
                <link href="/bundles/istoregomlaphone/css/bootstrap-theme.min.css" media="screen" rel="stylesheet" type="text/css">
                <link rel="stylesheet" href="/bundles/istoregomlaphone/css/datepicker.css">
                <link rel="stylesheet" href="/bundles/istoregomlaphone/css/style.css">
            {% endblock %}

    </head>
    <body>
        <header id="header">
            {% block navigation %}
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header {% if lang=='ar' %}ar{% endif %}">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand logo" href="/"><img src="/bundles/istoregomlaphone/img/iLetter.jpg" alt="iProduct" class="img-circle"/>&nbsp;Gomla Phone</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav {% if lang=='ar' %}ar{% endif %}">
                            <li class="active"><a href="/customer">Customers</a></li>
                            <li class="active"><a href="/item">Items</a></li>
                            <li class="active"><a href="/bulk">Bulks</a></li>
                            <li class="active"><a href="/model">Models</a></li>
                            <li class="active"><a href="/category">{% trans %}Categories{% endtrans %}</a></li>
                            <li class="active"><a href="/supplier">Suppliers</a></li>
                            <li class="active"><a href="/report">Reports</a></li>
                        </ul>
                        <!-- Language button -->
                        <div class="btn-group lang-btn {% if lang=='ar' %}left{% else %}right{% endif %}">
                          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            Language <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <li><a href="?lang=ar">Arabic</a></li>
                            <li><a href="?lang=en">English</a></li>
                          </ul>
                        </div>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>
            {% endblock %}
        </header>
        <section class="main-col">
            <div class="container content page-wrap">
                {% block body %}{% endblock %}
            </div> <!-- /container -->
        </section>

        {% block footer %}
            <footer class="site-footer">
                <p>&copy; 2014 powered by SourceTect. All rights reserved.</p>
            </footer><!-- /footer -->
        {% endblock %}        
    </body>
</html>