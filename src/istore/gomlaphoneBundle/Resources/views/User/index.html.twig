{% extends 'istoregomlaphoneBundle::layout.html.twig' %}
{% block body %}
<div class="panel panel-primary">
	<div class="panel-heading">
		<h4 class="">
			{% trans %}Users List{% endtrans %}
			<span class="badge {% if(lang=='ar') %}pull-left{% else %}pull-right{% endif %}">({{ total_users }}) users</span>
		</h4>
	</div>
	<div class="panel-body">
		<table class="table table-hover table-view">
			<tr>
				<th>{% trans %}Username{% endtrans %}</th>
                                <th>{% trans %}Email{% endtrans %}</th>
                                <th>{% trans %}Full Name{% endtrans %}</th>
				<th>{% trans %}Actions{% endtrans %}</th>
			</tr>
                {% if users|length %}
		{% for user in users %}
			<tr class="user_{{user.u_id}}">
				<td>{{ user.u_username }}</td>
                                <td>{{ user.u_email }}</td>
                                <td>{{ user.u_name }}</td>
				<td>
					<a href="/user/edit/{{user.u_id}}" class="btn btn-primary btn-sm">Edit</a> 
                                        {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
                                        - <a href="#" class="btn btn-danger btn-sm btn-delete" data-id="user:{{user.u_id}}:{{ user.u_name }}">{% trans %}Delete{% endtrans %}</a>
                                        {% endif %}
				</td>
			</tr>
		{% endfor %}
                {% else %}
                        <tr>
                            <td colspan="5">{% trans %}There are no users.{% endtrans %}</td>
			</tr>
                {% endif %}
			<tr>
				<td colspan="5"><div id="{% if(lang=='ar') %}paginator-ar{% else %}paginator{% endif %}"></div></td>
			</tr>
		</table>
	</div>
	<div class="panel-footer">
		<a href="/user/add/{{ store_id }}" class="btn btn-success btn-lg">+ {% trans %}Add New User{% endtrans %}</a>
                <a href="/store" class="btn btn-default btn-lg">{% trans %}Back to Stores{% endtrans %}</a>
		<input type="hidden" value="{% if total_pages > 0 %}{{total_pages}}{% else %}1{% endif %}" id="total_pages">
		<input type="hidden" value="{{ current_page }}" id="current_page">
	</div>
</div>
<!-- Delete Confirmation modal -->
<div class="modal fade bs-modal-sm" tabindex="-1" id="deleteConfirmation" role="dialog" aria-labelledby="DeleteConfirmationModal" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <label id="entityName"></label>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
                <a href="#" class="btn btn-danger btn-sm btn-delete-confirm">Delete</a>
                <input type="hidden" id="entityId" name="entityId" val="">
            </div>
        </div>
    </div>
</div>
<input type="hidden" value="{{ action }}" id="action">
<input type="hidden" value="{{ controller }}" id="controller">
{% endblock %}