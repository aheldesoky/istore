{% extends 'istoregomlaphoneBundle::layout.html.twig' %}
{% block body %}
<div class="panel panel-primary">
	<div class="panel-heading">
		<h4 class="">
			{% trans %}Supplier List{% endtrans %}
			<span class="badge {% if(lang=='ar') %}pull-left{% else %}pull-right{% endif %}">({{ total_suppliers }}) suppliers</span>
		</h4>
	</div>
	<div class="panel-body">
		<table class="table table-hover table-view">
			<tr>
				<th>#</th>
				<th>{% trans %}Supplier Name{% endtrans %}</th>
                                <th>{% trans %}Supplier Address{% endtrans %}</th>
                                <th>{% trans %}Supplier Phone{% endtrans %}</th>
                                <th>{% trans %}Supplier Email{% endtrans %}</th>
				<th>Action</th>
			</tr>
                {% if suppliers|length %}
		{% for supplier in suppliers %}
			<tr>
				<td>{{ supplier.s_id }}</td>
				<td>{{ supplier.s_supplier_name }}</td>
                                <td>{{ supplier.s_supplier_address }} , {{ supplier.g_governorate_name }}</td>
                                <td>{{ supplier.s_supplier_phone }}</td>
                                <td>{{ supplier.s_supplier_email }}</td>
				<td>
					<a href="/supplier/edit/{{supplier.s_id}}" class="btn btn-primary btn-sm">Edit</a> - 
                                        <a href="#" class="btn btn-danger btn-sm btn-delete" data-id="supplier:{{supplier.s_id}}:{{ supplier.s_supplier_name }}">{% trans %}Delete{% endtrans %}</a>
				</td>
			</tr>
		{% endfor %}
                {% else %}
                        <tr>
                            <td colspan="6">{% trans %}There are no suppliers.{% endtrans %}</td>
			</tr>
                {% endif %}
			<tr>
				<td colspan="6"><div id="{% if(lang=='ar') %}paginator-ar{% else %}paginator{% endif %}"></div></td>
			</tr>
		</table>
	</div>
	<div class="panel-footer">
		<a href="/supplier/add" class="btn btn-success btn-lg">+ Add New Supplier</a>
		<input type="hidden" value="{{ total_pages }}" id="total_pages">
		<input type="hidden" value="{{ current_page }}" id="current_page">
	</div>
</div>
<!-- Delete Confirmation modal -->
<div class="modal fade bs-modal-sm" tabindex="-1" id="deleteConfirmation" role="dialog" aria-labelledby="DeleteConfirmationModal" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <label id="entityName"></label>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
                <a href="/category/delete/" class="btn btn-danger btn-sm btn-delete-confirm">Delete</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}