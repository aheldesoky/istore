{% extends 'istoregomlaphoneBundle::layout.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" method="post" id="supplierForm">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h4>{% trans %}Edit Supplier{% endtrans %}</h4>
		</div>
		<div class="panel-body">
			<div class="form-container">
				<div class="">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label for="supplierName" class="col-sm-4 control-label">{% trans %}Supplier Name{% endtrans %}</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="supplierName" name="supplierName" placeholder="{% trans %}Name{% endtrans %}" value="{{ supplier.supplierName }}">
								</div>
							</div>
                                                        <div class="form-group">
								<label for="supplierPhone" class="col-sm-4 control-label">{% trans %}Supplier Phone{% endtrans %}</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="supplierPhone" name="supplierPhone" placeholder="{% trans %}Phone{% endtrans %}" value="{{ supplier.supplierPhone }}">
								</div>
							</div>
                                                        <div class="form-group">
								<label for="supplierEmail" class="col-sm-4 control-label">{% trans %}Supplier Email{% endtrans %}</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="supplierEmail" name="supplierEmail" placeholder="{% trans %}Email{% endtrans %}" value="{{ supplier.supplierEmail }}">
								</div>
							</div>
                                                        <div class="form-group">
								<label for="supplierGovernorate" class="col-sm-4 control-label">{% trans %}Supplier Governorate{% endtrans %}</label>
								<div class="col-sm-6">
									<select class="form-control required" id="supplierGovernorate" name="supplierGovernorate">
										<option value="" selected>{% trans %}Select governorate{% endtrans %}</option>
										{% for governorate in governorates %}
										<option value="{{ governorate.g_id }}" {% if governorate.g_id == supplier.supplierGovernorateId %}selected{% endif %}>{{ governorate.g_governorate_name }}</option>
										{% endfor %}
									</select>
								</div>
							</div>
                                                        <div class="form-group">
								<label for="supplierAddress" class="col-sm-4 control-label">{% trans %}Supplier Address{% endtrans %}</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="supplierAddress" name="supplierAddress" placeholder="{% trans %}Address{% endtrans %}" value="{{ supplier.supplierAddress }}">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="panel-footer">
			<button type="submit" class="btn btn-success btn-lg">{% trans %}Edit Supplier{% endtrans %}</button>
                        <a href="/store" class="btn btn-default btn-lg">{% trans %}Back to Store{% endtrans %}</a>
		</div>
	</div>
</form>
<input type="hidden" value="{{ action }}" id="action">
<input type="hidden" value="{{ controller }}" id="controller">
{% endblock %}
