{% extends 'istoregomlaphoneBundle::layout.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" id="customerForm" method="post">
        <input type="hidden" id="customerId" name="customerId" value="{{ customer.id }}">
	<div class="panel panel-primary">
		<div class="panel-heading">
                        <h4>{% trans %}Edit Customer{% endtrans %}</h4>
		</div>
		<div class="panel-body">
			<div class="form-container">
				<div class="">
					<div class="row">
						<div class="col-md-6">
                                                        <div class="form-group">
								<label for="customerPhone" class="col-sm-4 control-label">{% trans %}Customer Phone{% endtrans %}</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="customerPhone" name="customerPhone" placeholder="{% trans %}Phone{% endtrans %}" value="{{ customer.customerPhone }}">
                                                                        <label for="categoryName" class="customer-error hidden"></label>
								</div>
							</div>
							<div class="form-group">
								<label for="customerName" class="col-sm-4 control-label">{% trans %}Customer Name{% endtrans %}</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="customerName" name="customerName" placeholder="{% trans %}Full Name{% endtrans %}" value="{{ customer.customerName }}">
                                                                        <label for="categoryName" class="customer-error hidden"></label>
								</div>
							</div>
                                                        <div class="form-group">
                                                                <label for="customerType" class="col-sm-4 control-label">{% trans %}Type{% endtrans %}</label>
                                                                <div class="col-sm-6">
                                                                        <select class="form-control" id="customerType" name="customerType">
                                                                                <option value="prepaid" {% if customer.customerType == 'prepaid' %}selected{% endif %}>{%trans%}Prepaid{%endtrans%}</option>
                                                                                <option value="postpaid" {% if customer.customerType == 'postpaid' %}selected{% endif %}>{%trans%}Postpaid{%endtrans%}</option>
                                                                        </select>
                                                                </div>
                                                        </div>
                                                        <!--<div class="form-group">
								<label for="customerNotes" class="col-sm-4 control-label">{% trans %}Customer Notes{% endtrans %}</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="customerNotes" name="customerNotes" placeholder="{% trans %}Notes{% endtrans %}">
								</div>
							</div>-->
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="panel-footer">
			<button type="submit" class="btn btn-success btn-lg btn-customer-edit">{% trans %}Edit Customer{% endtrans %}</button>
		</div>
	</div>
</form>
<input type="hidden" value="{{ action }}" id="action">
<input type="hidden" value="{{ controller }}" id="controller">
{% endblock %}