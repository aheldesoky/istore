{% extends 'istoregomlaphoneBundle::layout.html.twig' %}
{% block body %}
<div class="panel panel-primary">
	<div class="panel-heading">
		<h4 class="">
			{% trans %}Customer List{% endtrans %}
			<span class="badge {% if(lang=='ar') %}pull-left{% else %}pull-right{% endif %}">({{ total_customers }}) customers</span>
		</h4>
	</div>
	<div class="panel-body">
		<table class="table table-hover table-view">
			<tr>
                                <th>{% trans %}Phone Number{% endtrans %}</th>
				<th>{% trans %}Full Name{% endtrans %}</th>
                                <th>{% trans %}Address{% endtrans %}</th>
                                <th>{% trans %}Notes{% endtrans %}</th>
				<!--<th>{% trans %}Action{% endtrans %}</th>-->
			</tr>
                {% if customers|length %}
		{% for customer in customers %}
			<tr>
                                <td>{{ customer.c_customer_phone }}</td>
				<td>{{ customer.c_customer_fname }} {{ customer.c_customer_lname }}</td>
                                <td>{{ customer.c_customer_address }}</td>
                                <td>{{ customer.c_customer_notes }}</td>
				<!--<td>
					<a href="/customer/edit/{{customer.c_id}}" class="btn btn-primary btn-sm">Edit</a> - 
					<a href="#" class="btn btn-danger btn-sm btn-delete" data-id="customer:{{customer.c_id}}:{{ customer.c_customer_fname }} {{ customer.c_customer_lname }}">{% trans %}Delete{% endtrans %}</a>
				</td>-->
			</tr>
		{% endfor %}
                {% else %}
                        <tr>
                            <td colspan="6">{% trans %}There are no customers.{% endtrans %}</td>
			</tr>
                {% endif %}
			<tr>
				<td colspan="6"><div id="{% if(lang=='ar') %}paginator-ar{% else %}paginator{% endif %}"></div></td>
			</tr>
		</table>
	</div>
	<div class="panel-footer">
		<!--<a href="/customer/add" class="btn btn-success btn-lg">+ Add New Customer</a>-->
		<input type="hidden" value="{{ total_pages }}" id="total_pages">
		<input type="hidden" value="{{ current_page }}" id="current_page">
	</div>
</div>
<!-- Delete Confirmation modal -->
<div class="modal fade bs-modal-sm" tabindex="-1" id="deleteConfirmation" role="dialog" aria-labelledby="DeleteConfirmationModal" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <label id="entityName"></label>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
                <a href="" class="btn btn-danger btn-sm btn-delete-confirm">Delete</a>
            </div>
        </div>
    </div>
</div>
<input type="hidden" value="{{ action }}" id="action">
<input type="hidden" value="{{ controller }}" id="controller">
{% endblock %}