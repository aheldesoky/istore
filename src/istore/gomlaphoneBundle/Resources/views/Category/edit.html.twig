{% extends 'istoregomlaphoneBundle::layout.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" method="post" id="categoryForm">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h4>Edit Category</h4>
		</div>
		<div class="panel-body">
			<div class="form-container">
				<div class="">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label for="categoryName" class="col-sm-4 control-label">Category Name</label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Name" value="{{ category.categoryName }}">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="panel-footer">
			<button type="submit" class="btn btn-success btn-lg">Edit Category</button>
		</div>
	</div>
</form>
{% endblock %}