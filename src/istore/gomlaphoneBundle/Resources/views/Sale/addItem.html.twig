<!-- Add new item modal -->
<div class="modal fade bs-modal-md" tabindex="-1" id="addSaleItem" role="dialog" aria-labelledby="AddSaleItemModal" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{%trans%}Add New Item{%endtrans%}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-horizontal">
                            <div class="row input-serial alert alert-info alert-serial-sale">
                                    <div class="col-lg-9">
                                            <div class="form-group">
                                                    <input type="text" class="form-control input-lg" id="itemSerial" name="itemSerial" placeholder="{% trans %}Item Serial{% endtrans %}">
                                                    <label for="itemSerial" class="serial-error"></label>
                                            </div>
                                    </div>
                                    <div class="col-lg-1">
                                            <button id="item-serial-sale" data-loading-text="{% trans %}Loading{% endtrans %}" class="btn btn-warning btn-lg" type="button">{% trans %}Check{% endtrans %}</button>
                                    </div>
                            </div>
                            <div class="row">
                                    <div class="col-md-12">
                                            <div class="form-group">
                                                    <label for="itemBrand" class="col-sm-4 control-label">{% trans %}Brand{% endtrans %} : </label>
                                                    <div class="col-sm-6">
                                                            <label class="control-label" id="itemBrand" name="Brand"></label>
                                                    </div>
                                            </div>
                                            <div class="form-group">
                                                    <label for="itemModel" class="col-sm-4 control-label">{% trans %}Model{% endtrans %} : </label>
                                                    <div class="col-sm-6">
                                                            <label class="control-label" id="itemModel" name="itemModel"></label>
                                                    </div>
                                            </div>
                                            <div class="form-group">
                                                    <label for="itemCategory" class="col-sm-4 control-label">{% trans %}Category{% endtrans %} : </label>
                                                    <div class="col-sm-6">
                                                            <label class="control-label" id="itemCategory" name="itemCategory"></label>
                                                    </div>
                                            </div>
                                            <div class="form-group">
                                                    <label for="itemPrice" class="col-sm-4 control-label">{% trans %}Price{% endtrans %} : </label>
                                                    <div class="col-sm-3">
                                                            <label class="control-label" id="itemPrice" name="itemPrice"></label>
                                                    </div>
                                            </div>
                                            <div class="hidden quantity-field">
                                                <div class="form-group">
                                                    <label for="itemQuantity" class="col-sm-4 control-label">{% trans %}Quantity{% endtrans %} : </label>
                                                    <div class="col-sm-3">
                                                            <input type="number" class="form-control" id="itemQuantity" name="itemQuantity" value="1" placeholder="{% trans %}Quantity L.E.{% endtrans %}">
                                                    </div>
                                                    <label id="bulkQuantity" name="bulkQuantity" class="col-sm-3 control-label"></label>
                                                    <input type="hidden" id="bulk-qty" name="bulk-qty" value="">
                                                </div>
                                            </div>
                                            
                                            <div class="form-group">
                                                    <div class="col-sm-6">
                                                        <button class="col-md-4 col-md-offset-8 btn btn-default btn-md btn-clear-item" id="clearItem" name="clearItem">{% trans %}Clear{% endtrans %}</button>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <button class="col-md-4 col-md-offset-1 btn btn-success btn-md btn-add-item" id="addItem" name="addItem">{% trans %}Add{% endtrans %}</button>
                                                    </div>
                                            </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>